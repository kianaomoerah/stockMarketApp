<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="card detail-card col-sm-8 col-md-6 col-lg-4 col-xl-3">
      <%= image_tag(profile["logo"], alt: "Company logo for #{profile["name"]}", :class => "details-img") %>
      <div class="card-body text-center">
        <h5 class="card-title"><%= profile["ticker"] %></h5>
      </div>
    </div>
    <div class="card detail-card col-sm-8 col-md-6 col-lg-4 col-xl-3 d-flex justify-content-center text-center">
      <div class="row">
        <table class="table">
        <thead colspan="2" style="font"><h5><%= profile["name"] %> Details</h5></thead>
        <tbody>
          <tr>
            <td>Current Price:</td>
            <td>$<%= quote["c"] || "N/A" %></td>
          </tr>
          <tr>
            <td>Previous Close:</td>
            <td>$<%= quote["pc"] || "N/A" %></td>
          </tr>
          <tr>
            <% sign = quote["dp"] > 0 ? "+" : "" %>  
            <td>Change (%)</td>
            <td><%= sign || "N/A" %><%= precision(quote["dp"]) || "N/A" %>%</td>
          </tr>
          <tr>
            <td>Today's High:</td>
            <td>$<%= precision(quote["h"]) || "N/A" %></td>
          </tr>
          <tr>
            <td>Today's Low</td>
            <td>$<%= precision(quote["l"]) || "N/A" %></td>
          </tr>
          <tr>
            <td>52 Week High:</td>
            <td>$<%= precision(metric["metric"]["52WeekHigh"]) || "N/A" %></td>
          </tr>
          <tr>
            <td>52 Week Low:</td>
            <td>$<%= precision(metric["metric"]["52WeekLow"]) || "N/A" %></td>
          </tr>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>