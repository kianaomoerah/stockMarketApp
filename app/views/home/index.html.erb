<h1>Home</h1>
<p>Search Stocks:</p>

<%= form_tag '#', method: :get do %>
  <div class="row">
    <div class="col-8">
      <%= text_field_tag :stock, params[:stock], placeholder: "Enter Company Ticker Symbol e.g. 'AAPL'", autofocus: true, class: "form-control" %>
    </div>
    <div class="col-1">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
        <%= fa_icon 'search' %>
      <% end %>
    </div>
  </div>
<% end %>

<br />

<% if @stock %>
  <%= @stock.company_name %>
  <br />
  $<%= @stock.latest_price %>  
<% else %>
  <% flash.each do |type, msg| %>
    <div class="alert alert-info">
      <%= msg %>
    </div>
  <% end %>    
<% end %>

